<mod:findLike type="crew">
    <mod-append:race name="db_indy_crew_repair_drone">
        <animSheet>repair</animSheet>
        <maxHealth>50</maxHealth>
        <crewSlots>0</crewSlots> <!-- Crew drones take up no crew slots in exchange for costly production -->
        <canFight>false</canFight>
        <canSabotage>false</canSabotage>
        <canMan>false</canMan> <!-- Only manager and director drones can man systems -->
        <noClone>true</noClone> <!-- Drone are not cloneable -->
        <healSpeed>1</healSpeed> 
        <canBurn>true</canBurn>
        <canSuffocate>false</canSuffocate>
        <repairSpeed>2.5</repairSpeed>
        <moveSpeedMultiplier>1.2</moveSpeedMultiplier>
        <stunMultiplier>0.25</stunMultiplier>
        <fireDamageMultiplier>0.35</fireDamageMultiplier>
        <resistsMindControl>true</resistsMindControl> 
        <controllable>true</controllable>
        <deathSounds>
            <deathSound>sysExplosion</deathSound>
        </deathSounds>
        <passiveStatBoosts>
            <statBoost name="healAmount"> <!-- Drone should only heal in the drone room -->
                <boostType>SET</boostType>
                <amount>1.0</amount>
                <shipTarget>ORIGINAL_SHIP</shipTarget>
                <crewTarget>SELF</crewTarget>
                <maxStacks>1</maxStacks>
                <priority>0</priority>
                <whiteList>
                    <db_indy_crew_repair_drone/>
                </whiteList>
                <systemRoomTarget>ALL</systemRoomTarget>
                <systemPowerDependency>
                    <drones/>
                </systemPowerDependency>
                <systemList>
                    <drones/>
                </systemList>
                <systemPowerScaling>
                    <noSys>0</noSys>
                    <noPwr>1</noPwr>
                    <onePwr>1</onePwr>
